#ifndef PORTFOLIO_H_
#define PORTFOLIO_H_

class Portfolio {
public:
	Portfolio(double initBalance):
		currentBalance(initBalance) {}
	virtual ~Portfolio();
private:
	double currentBalance;
	double realisedPnL;
	std::vector positions;
};

#endif /* PORTFOLIO_H_ */
