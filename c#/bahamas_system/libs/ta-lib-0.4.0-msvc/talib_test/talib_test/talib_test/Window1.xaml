<Window x:Class="talib_test.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="350" Width="500">
    <Grid>
        <Button Margin="10" HorizontalAlignment="Center" Click="Button_Click" VerticalAlignment="Top" >Start Calculation</Button>
        <ListView Name="listView1" Height="250"  VerticalAlignment="Bottom" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Index"  DisplayMemberBinding="{Binding Path=Index}" />
                    <GridViewColumn Header="MACD" DisplayMemberBinding="{Binding Path=Macd}"/>
                    <GridViewColumn Header="Signal" DisplayMemberBinding="{Binding Path=Signal}"/>
                    <GridViewColumn Header="MACD Histogram" DisplayMemberBinding="{Binding Path=MacdHistogram}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
